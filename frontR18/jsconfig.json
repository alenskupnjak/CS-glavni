{
	"compilerOptions": {
		"experimentalDecorators": true,
		"baseUrl": "src",
		"paths": {
			"@app/*": ["./src/@app/*"],
			"components/*": ["./src/components"],
			"@data/*": ["./src/@data/*"],
			"app/stores/*": ["./src/app/store/*"],
			"app/components/*": ["./src/app/components/*"],
			"app/*": ["./src/app/*"],
			"features/*": ["./src/features/*"]
		}
	},
	"include": ["src/**/*"]
}
